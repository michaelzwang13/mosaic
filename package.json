{
  "name": "mosaic-fullstack",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "sass:build": "sass src/scss/main.scss public/css/compiled.css",
    "sass:watch": "sass --watch src/scss/main.scss public/css/compiled.css",
    "dev:server": "npm run sass:watch & nodemon app.mjs",
    "dev:client": "next dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:server": "npm run sass:build",
    "build:client": "next build",
    "build": "npm run build:server && npm run build:client",
    "start": "node app.mjs"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "bootstrap": "^5.3.8",
    "class-variance-authority": "^0.7.1",
    "cloudinary": "^2.8.0",
    "clsx": "^2.1.1",
    "connect-mongo": "^5.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-handlebars": "^8.0.3",
    "express-session": "^1.18.2",
    "gridstack": "^12.3.3",
    "hbs": "^4.2.0",
    "jose": "^6.1.2",
    "lucide-react": "^0.559.0",
    "mongoose": "^8.19.2",
    "multer": "^2.0.2",
    "next": "16.0.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "recharts": "2.15.4",
    "sass": "^1.94.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vituum/vite-plugin-handlebars": "^1.1.0",
    "concurrently": "^9.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.0.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vite": "^7.1.12"
  }
}